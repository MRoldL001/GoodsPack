<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.GoodsPack" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize default theme -->
    </style>

    <!-- 默认主题 青碧 -->
    <style name="Theme.GoodsPack" parent="Base.Theme.GoodsPack">
        <item name="colorPrimary">#268785</item>
        <item name="colorPrimaryVariant">#1e6b6b</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- BottomNavigationView attributes -->
        <item name="colorControlNormal">#a1a1a1</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <!-- FloatingActionButton attributes -->
        <item name="colorAccent">#268785</item>
    </style>

    <!-- 菖蒲 -->
    <style name="Theme.GoodsPack.Shobu" parent="Base.Theme.GoodsPack">
        <item name="colorPrimary">#6f3381</item>
        <item name="colorPrimaryVariant">#5c2868</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- BottomNavigationView attributes -->
        <item name="colorControlNormal">#a1a1a1</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <!-- FloatingActionButton attributes -->
        <item name="colorAccent">#6f3381</item>
    </style>

    <!-- 桃染 -->
    <style name="Theme.GoodsPack.Momozome" parent="Base.Theme.GoodsPack">
        <item name="colorPrimary">#f596aa</item>
        <item name="colorPrimaryVariant">#d98089</item>
        <item name="colorOnPrimary">#ffffff</item>
        <!-- BottomNavigationView attributes -->
        <item name="colorControlNormal">#a1a1a1</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <!-- FloatingActionButton attributes -->
        <item name="colorAccent">#f596aa</item>
    </style>

    <!-- 动态 -->
    <style name="Theme.GoodsPack.Dynamic" parent="Base.Theme.GoodsPack">
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_700</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_1000</item>
        <!-- BottomNavigationView attributes -->
        <item name="colorControlNormal">@android:color/system_accent1_500</item>
        <item name="colorControlActivated">@android:color/system_accent1_700</item>
        <item name="colorControlHighlight">@android:color/system_accent1_700</item>
        <!-- FloatingActionButton attributes -->
        <item name="colorAccent">@android:color/system_accent1_500</item>
    </style>
</resources>
